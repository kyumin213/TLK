.form-input {
  width: 560rpx;
  height: auto;
  background-color: none;
  box-sizing: border-box;
  -webkit-align-self: center;
          align-self: center;
  margin-top: 10rpx;
}
.form-input .form-title {
  font-size: 26rpx;
  color: #2DE9B7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.form-input .form-title .title {
  display: inline-block;
}
.form-input .form-title .title-icon1 {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background-color: #2DE9B7;
  border-radius: 50%;
  margin-left: 9rpx;
  margin-bottom: 7rpx;
}
.form-input .form-title .title-icon2 {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background-color: #4F6BFF;
  border-radius: 50%;
  margin-left: 5rpx;
  margin-bottom: 7rpx;
}
.form-input .tips-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.form-input .tips-box .tips {
  font-size: 16rpx;
  color: #F42F2F;
  padding-top: 10rpx;
}
.form-input .input-box {
  box-sizing: border-box;
  border-bottom: 1px solid #8397b7;
}
.form-input .input-box .input {
  font-size: 20rpx;
  color: #fff;
  padding-left: 18rpx;
  padding-top: 19rpx;
  padding-bottom: 19rpx;
  padding-right: 18rpx;
}
.form-input .hide {
  visibility: hidden;
}

