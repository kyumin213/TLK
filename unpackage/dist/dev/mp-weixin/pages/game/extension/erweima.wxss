.box {
  width: 90%;
  margin: 30rpx auto;
  background: rgba(30, 44, 74, 0.8);
  border-radius: 10rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 50rpx 0;
  color: #2EEAB8;
}
.box image {
  width: 200rpx;
  margin-bottom: 50rpx;
}
.box .hr {
  width: 80%;
  margin: 20rpx auto;
  background: #8498b8;
  height: 2rpx;
}
.btn {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  text-align: center;
}
.btn view {
  width: 80%;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 20rpx 0;
  font-size: 27rpx;
  color: white;
  background: -webkit-linear-gradient(left, #2b66bc, #089d75);
  background: linear-gradient(90deg, #2b66bc, #089d75);
  border-radius: 6rpx;
}

